import time
from calendar import isleap # یه چیز رو از اون کتاب خونه میاریم ، اون چیزی رو که می خوایم

def judge_leap_year(year):
    if isleap(year):
        return True
    else:
        return False
    
def month_days(month , leap_year):
    if month in [1 , 2 , 3 , 4 , 5 , 6]: # یکی از این اعداد باشه
        return 31
    elif month in [7 , 8 , 9 , 10 , 11]:# یکی از این اعداد باشه
        return 30
    elif month == 12 and leap_year:
        return 30
    elif month == 12 and (not leap_year):
        return 29
    
def to_hours(days):
    hours = days * 24   # 3 * 24 = 72
    return hours

def to_seconds(days):
    sec = days * 24 * 3600
    return sec

age = input("enter your age")
local = time.localtime(time.time())  # **اطلاعات لحظه ی کنونی**
year = int(age)

month = year * 12 + local.tm_mon

begin_year = int(local.tm_year) - year
end_year = begin_year + year

day = 0
for i in range(begin_year , end_year):
    if (judge_leap_year(i)):
        day = day + 366
    else:
        day = day + 365


leap_year = judge_leap_year(local.tm_year)

for m in range(1 , local.tm_mon):
    day = day + month_days(m , leap_year)


dey = day + local.tm_mday

hours =  to_hours(day)
second = to_seconds(dey)
print(f"age is {year}")
print("%d months or %d days "% (month , day) , end="")
print(" or %d hours or %d second"% (hours , second))
